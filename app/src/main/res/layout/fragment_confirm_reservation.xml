<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00669BBC">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#669BBC"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="0sp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/user_ic" />

            <TextView
                android:id="@+id/usuarioLabel"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Usuario:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/UserName"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="Hector Mendez"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/educationIconId"
                android:layout_width="0sp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/education_ic" />

            <TextView
                android:id="@+id/carreraId"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Carrera:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/carreraValue"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="Informatica"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/routeIconId"
                android:layout_width="0sp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/route_ic" />

            <TextView
                android:id="@+id/routeLabelId"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Ruta:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/routeValue"
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="Central - Benjamin Nunez"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendarIconId"
                android:layout_width="0sp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/calendar_ic" />

            <TextView
                android:id="@+id/diaLabelId"
                android:layout_width="2dp"
                android:layout_height="69dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Dia:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/diaValueId"
            android:layout_width="189dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="23/08/2023"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.472">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timeIconId"
                android:layout_width="0sp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/time_ic" />

            <TextView
                android:id="@+id/horaLabelId"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Hora:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/horaValueId"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="Hora"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/queueIcon"
                android:layout_width="0sp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/queue_ic" />

            <TextView
                android:id="@+id/queueLabelId"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="En cola:"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/queueValueId"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:gravity="center|start"
            android:paddingLeft="0sp"
            android:text="No"
            android:textSize="28dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:background="#669BBC"
        android:backgroundTint="#669BBC"
        android:backgroundTintMode="multiply"
        android:hapticFeedbackEnabled="false"
        android:shadowColor="#000000"
        android:text="Confirmar Reserva"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793"
        app:rippleColor="#000000"
        app:strokeColor="#000000" />


</androidx.constraintlayout.widget.ConstraintLayout>